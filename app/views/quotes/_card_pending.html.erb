  <div class="card-body text-secondary">
    <table class="ms-3">
    <tr>
      <td class="text-end">Coverage: </td>
      <td><%= content_tag :p, number_to_currency(@pending_coverage, locale: :ph), class: "card-text text-start ms-5" %></td>
    </tr>
    <tr>
      <td class="text-end">Premium: </td>
      <td><%= content_tag :p, number_to_currency(@pending_net_prem, locale: :ph), class: "card-text text-start ms-5" %></td>
    </tr>
    </table>
  </div>
</div>