
<%= simple_form_for(@actuarial_matrix_lppi) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :min_age %>
    <%= f.input :max_age %>
    <%= f.input :min_annual_prem_rate %>
    <%= f.input :max_annual_prem_rate %>
    <%= f.input :max_allowed_comm %>
    <%= f.association :rider_add_tpd %>
    <%= f.association :rider_adb %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
