<p style="color: green"><%= notice %></p>

<%= content_tag :h3, "Batches", class: "text-secondary text-center mt-2" %>

<div id="batches">
  <div class="container">
    <% @batches.each do |batch| %>
      <div class="row justify-content-md-center">
        <div class="col-4 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-body">
              <h5 class="card-title"><%= link_to batch.name, batch_path(batch), class: "text-success remove-line" %></h5>
              
            </div>
            
          </div>
        </div>
      </div>
    <% end %>
  </div>  
</div>

<%= link_to "New batch", new_batch_path, class: "btn btn-outline-success float-center" %>
